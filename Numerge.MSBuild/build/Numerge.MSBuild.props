<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <!--defining properties interesting for my task-->
    <PropertyGroup>
        <!--The folder where the custom task will be present. It points to inside the nuget package. -->
        <_Numerge_MSBuild_TaskFolder>$(MSBuildThisFileDirectory)..\tasks\netstandard2.0</_Numerge_MSBuild_TaskFolder>
        <!--Reference to the assembly which contains the MSBuild Task-->
        <CustomTasksAssembly>$(_Numerge_MSBuild_TaskFolder)\$(MSBuildThisFileName).dll</CustomTasksAssembly>
    </PropertyGroup>

    <!--Register our custom task-->
    <UsingTask TaskName="$(MSBuildThisFileName).NumergeTask" AssemblyFile="$(CustomTasksAssembly)"/>

    <!--Task parameters default values, this can be overridden-->
    <PropertyGroup>
        <ClearIntermediatePackages Condition="'$(ClearIntermediatePackages)' == ''">True</ClearIntermediatePackages>
        <NumergeConfigFile Condition="'$(NumergeConfigFile)' == ''">numerge.config.json</NumergeConfigFile>
    </PropertyGroup>
</Project>